<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryDark">#2fb153</item>
        <item name="colorAccent">#cccccc</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:color">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
    </style>

</resources>
